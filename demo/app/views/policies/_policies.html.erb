
<%if @agent.policies %>
<table class="table">
    <tr>
        <th>Number</th>
        <th>Holder</th>
        <th>Vehicles</th>
    </tr>
    <% @agent.policies.each do |p| %>
    <tr>
        <td><%= link_to p.number, account_policy_path(p) %></td>
        <td><%= p.last_name %></td>
        <td><%= p.vehicles.count %></td>
    </tr>
    <% end %>
</table>
<% else %>
<p>You don't have any policies at this time.</p>
<% end %>

</br>
</br>

<div class="row">
  <div class="span4">
   <%= link_to "Add Policy", new_account_policy_path, :class=>"btn btn-success" %></div>
</div>


