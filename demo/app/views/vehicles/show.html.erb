<% content_for :title=>"Vehicle" %>

<div class="row">
    <div class="page-header">
        <h1>Vehicle - <small><%= @vehicle.vin %></small></h1>
    </div>
</div>

<% if !@vehicle.covered %>
    <div class="row">
        <div class="span12 alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Warning!</strong> Vehicle deductible isn't currently covered.
        </div>
    </div>
<% end %>

<div class="row">
    <div class="span4">
        <strong>Make </strong>
        <%= @vehicle.make %>
    </div>
    <div class="span4">
        <strong>Model </strong>
        <%= @vehicle.model %>
    </div>
    <div class="span4">
        <strong>Color </strong>
        <%= @vehicle.color %>
    </div>
</div>

<div class="row">
    <div class="span6">
        <strong>Drivers </strong> Somedude1, Somedude2
    </div>
</div>

</br>
<div class="row">
    <div class="span12">
        <h3>Coverage Information</h3>
    </div>
</div>

<div class="row">
    <div class="span4">
        <strong>Start  </strong>
        <%= @vehicle.start_date %>
    </div>
    <div class="span4">
        <strong>Expires </strong>
        <%= @vehicle.expr_date %>
    </div>
    <div class="span4">
        <strong>Deductible $</strong>
        <%= @vehicle.deductible %>
    </div>
</div>

</br>
</br>
</br>
<div class="row">
    <div class="span12">
        <%= link_to "Edit", edit_account_policy_vehicle_path(@vehicle.policy_id, @vehicle.id) , :class=>"btn btn-success"%>
    </div>
</div>


