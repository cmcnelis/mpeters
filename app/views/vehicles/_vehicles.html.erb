
<div class="row">
<%if @policy.vehicles.count > 0 %>
    <% if @policy.not_covered.count > 0 %>
        <div class="container">
            <div class="row">
                <div class="span12 alert alert-warning">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Warning!</strong> One or more deductibles are not currently covered. <%= link_to "Send Reminder..", notify_path(@vehicle.policy_id), :class=>"btn btn-link", :method=>:put %>
                </div>
            </div>
        </div>
    <% end %>
</div>

<table class="table">
    <tr>
        <th>Vin</th>
        <th>Make</th>
        <th>Model</th>
        <th>Deductible</th>
        <th>Status</th>
    </tr>
    <% @policy.vehicles.each do |v| %>
    <tr>
        <td><%= link_to raw("<span class='glyphicon glyphicon-remove'></span>"), account_policy_vehicle_path(@policy.id, v.id),
                :method=>:delete, :data=>{:confirm=>"Are you sure you want to remove this vehicle?"}, :class=>'btn btn-xs btn-default'%>
                <%= link_to v.vin, account_policy_vehicle_path(v.policy_id, v.id) %></td>
        <td><%= v.make %></td>
        <td><%= v.model %></td>
        <td><%= "$ #{'%.2f' % v.deductible}" %></td>
        <% if v.covered? %>
            <td>OK</td>
        <% else %>
            <td>Needs Attention</td>
        <% end %>
    </tr>
    <% end %>
</table>
<% else %>
<p>The policy does not have any vehicles covered at this time.</p>
<% end %>
</div>
