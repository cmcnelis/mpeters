<% content_for :title=>"Vehicle" %>

<div class="container">
    <div class="page-header">
        <h1>Vehicle
        <%= link_to "Edit", edit_account_policy_vehicle_path(@vehicle.policy_id, @vehicle.id) , :class=>"btn btn-link" %>
        <%= link_to "Policy", account_policy_path(@vehicle.policy_id), :class=>"btn btn-link"%>
    </h1>
    </div>
</div>

<div class="container">
<% if !@vehicle.covered %>
    <div class="row">
        <div class="span12 alert alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Warning!</strong> Vehicle deductible isn't currently covered.
        </div>
    </div>
<% end %>
</div>

<div class="container">
<div class="row">
    <div class="span4">
        <strong>VIN </strong>
        <%= @vehicle.vin %>
    </div>
    <div class="span4">
        <strong>Make </strong>
        <%= @vehicle.make %>
    </div>
    <div class="span4">
        <strong>Model </strong>
        <%= @vehicle.model %>
    </div>
    <div class="span4">
        <strong>Color </strong>
        <%= @vehicle.color %>
    </div>
    <div class="span4">
        <strong>Drivers</strong>
        <%= @vehicle.drivers %>
    </div>
</div>

</br>
<div class="row">
    <div class="span12">
        <h3>Coverage Information</h3>
    </div>
</div>

<div class="row">
    <div class="span4">
        <strong>Start  </strong>
        <%= @vehicle.start_date %>
    </div>
    <div class="span4">
        <strong>Expires </strong>
        <%= @vehicle.expr_date %>
    </div>
    <div class="span4">
        <strong>Deductible $</strong>
        <%= @vehicle.deductible %>
    </div>
</div>

</br>
</br>
</br>
<div class="row">
    <div class="span12">

    </div>
</div>
</div>


