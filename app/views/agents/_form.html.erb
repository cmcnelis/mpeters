
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Agent Profile </h3>
    </div>
    <div class="panel-body">

        <%= show_errors(@agent) %>

        <div class="form-group">
            <%= form.label :first_name, "First Name", :class=>'col-sm-2 control-label'%>
            <div class="col-sm-4">
                <%= form.text_field :first_name ,:class=>'form-control'%>
            </div>
        </div>
        <div class="form-group">
            <%= form.label :last_name, "Last Name" ,:class=>'col-sm-2 control-label' %>
            <div class='col-sm-4'>
                <%= form.text_field :last_name, :class=>'form-control'%>
            </div>
        </div>
        <div class="form-group">
            <%= form.label :company , :class=>'col-sm-2 control-label'%>
            <div class='col-sm-4'>
                <%= form.text_field :company, :class=>'form-control'%>
            </div>
        </div>
        <div class='form-group'>
            <%= form.label :email , :class=>'control-label col-sm-2'%>
            <div class='col-sm-4'>
                <%= form.email_field :email , :class=>'form-control', :placeholder=>'example@mail.com'%>
            </div>
        </div>
        <div class='form-group'>
            <%= form.label :email_confirmation,"Confirm Email", :class=>'control-label col-sm-2'%>
            <div class='col-sm-4'>
                <%= form.email_field :email_confirmation, :class=>'form-control' %>
            </div>
        </div>
        <div class='form-group'>
            <%= form.label :password, :class=>'control-label col-sm-2' %>
            <div class='col-sm-4'>
                <%= form.password_field :password, :class=>'form-control'%>
            </div>
        </div>
        <div class='form-group'>
            <%= form.label  :password_confirmation, 'Confirm Password', :class=>'col-sm-2 control-label'%>
            <div class="col-sm-4">
                <%= form.password_field :password_confirmation, :class=>'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class='col-sm-4 col-sm-offset-2'>
                <%= form.submit "Submit", :class=>"btn btn-default btn-sm" %>
                <%= link_to "Cancel", :back,  :class=> "btn btn-default btn-sm", :confirm=>"Are you sure?" %>
            </div>
        </div>
    </div>
</div>




