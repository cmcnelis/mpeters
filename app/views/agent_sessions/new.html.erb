<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-success">
      <div class="panel-heading">Login</div>
        <div class="panel-body">
        <%= form_for @agent_session  do |f| %>
          <%= show_errors(@agent_session) %>
          <div class="form-group">
          <%= f.text_field :email , :size=>10 , :placeholder=>'Email address' , :class=>'form-control'%>
        </div>
        <div class='form-group'>
          <%= f.password_field :password, :size=> 25 , :placeholder=>"Password" , :class=>'form-control'%>
        </div>
          <%= f.submit "Login" , :class=>"btn btn-success btn-sm"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
