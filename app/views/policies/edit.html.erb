<% content_for :title, "Edit Policy" %>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Edit Policy</h3>
        </div>
        <div class="panel-body">
            <%= form_for @policy, :url=>account_policy_path do |f| %>
                <%= render :partial=>'form', :object=>f %>
                <div class="form-group">
                    <div class="col-lg-10 col-offset-2">
                        <%= f.submit 'Submit', :class=>'btn btn-default btn-sm' %>
                        <%= link_to 'Cancel', account_policy_path, :class=>'btn btn-default btn-sm', :confirm=>"Are you sure?" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>



