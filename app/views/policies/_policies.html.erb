<%if @agent.policies %>
<table class="table">
    <tr>
        <th>Policy</th>
        <th>Holder</th>
        <th>Vehicles</th>
    </tr>
    <% @agent.policies.each do |p| %>
    <tr>
        <td><%= link_to 'X', account_policy_path(p.id),
                :class=>'btn btn-danger btn-xs',
                :method=>:delete, :confirm=>"Are you sure you want to remove this policy?"%>  <%= link_to p.number, account_policy_path(p.id) %></td>
        <td><%= p.last_name %></td>
        <td><%= p.vehicles.count %></td>
    </tr>
    <% end %>
</table>
<% else %>
<p>You don't have any policies at this time.</p>
<% end %>


