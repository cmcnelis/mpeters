<%if @agent.policies %>
<table class="table">
    <tr>
        <th>Policy</th>
        <th>Holder</th>
        <th>Vehicles</th>
        <th>Status</th>
    </tr>
    <% @agent.policies.each do |p| %>
    <tr>
        <td><%= link_to raw("<i class='glyphicon glyphicon-remove'></i>"), account_policy_path(p.id),
                :method=>:delete, :data=>{:confirm=>"Are you sure you want to remove this policy?"}%>  <%= link_to p.number, account_policy_path(p.id) %></td>
        <td><%= p.last_name %></td>
        <td><%= p.vehicles.count %></td>
        <td>TODO:StatusContent</td>
    </tr>
    <% end %>
</table>
<% else %>
<p>You don't have any policies at this time.</p>
<% end %>


