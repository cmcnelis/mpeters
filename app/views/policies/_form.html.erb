<div class="container">
    <%= show_errors(@policy) %>
    <div class='row'>
        <div class='col-md-2'>
            <%= form.label :number,  'Policy Number' %>
        </div>
        <div class='col-md-2'>
            <%= form.text_field :number %>
        </div>
        <div class='col-md-4'>
            <%= form.label :first_name, "First Name" %>
            <%= form.text_field :first_name %>
        </div>
        <div class='col-md-4'>
            <%= form.label :last_name, "Last Name" %>
            <%= form.text_field :last_name %>
        </div>
    </div>
    <div class='row'>
        <div class='col-md-4'>
            <%= form.label :email %>
            <%= form.email_field :email %>
        </div>
        <div class='col-md-4'>
            <%= form.label :email_confirmation, "Confirm Email" %>
            <%= form.email_field :email_confirmation%>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <%= form.label :address %>
            <%= form.text_field :address %>
        </div>
        <div class='col-md-4'>
            <%= form.label :city %>
            <%= form.text_field :city %>
        </div>
        <div class='col-md-3'>
            <%= form.label :state %>
            <%= form.text_field :state %>
        </div>
        <div class='col-md-3'>
            <%= form.label :zip_code, "Zip Code" %>
            <%= form.text_field :zip_code %>
        </div>
    </div>
</div>

