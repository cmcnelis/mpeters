<fieldset>
    <%= show_errors(@policy) %>
    <div class="form-group">
            <%= form.label :number,  'Policy Number', :class=>"col-md-2 control-label" %>
        <div class='col-md-10'>
            <%= form.text_field :number , :class=>"form-control" %>
        </div>
    </div>
    <div class="form-group">
            <%= form.label :first_name, "First Name" , :class=>"col-md-2 control-label"%>
        <div class="col-md-10">
            <%= form.text_field :first_name, :class=>"form-control" %>
        </div>
    </div>
    <div class="form-group">
            <%= form.label :last_name, "Last Name" , :class=>"col-md-2 control-label"%>
            <div class="col-md-10">
                <%= form.text_field :last_name, :class=>"form-control" %>
            </div>
    </div>
    <div class="form-group">
            <%= form.label :email, :class=>"col-md-2 control-label" %>
            <div class="col-md-10">
                <%= form.email_field :email , :class=>"form-control" %>
            </div>
    </div>
    <div class="form-group">
            <%= form.label :email_confirmation, "Confirm Email", :class=>"col-md-2 control-label" %>
        <div class="col-md-10">
            <%= form.email_field :email_confirmation, :class=>"form-control"%>
        </div>
    </div>
    <div class="form-group">
            <%= form.label :address, :class=>'col-md-2  control-label' %>
            <div class="col-md-10">
                <%= form.text_field :address, :class=>"form-control" %>
            </div>
    </div>
    <div class="form-group">
            <%= form.label :city , :class=>"col-md-2 control-label"%>
        <div class="col-md-10">
            <%= form.text_field :city, :class=>"form-control" %>
        </div>
    </div>
    <div class="form-group">
            <%= form.label :state, :class=>"col-md-2 control-label" %>
        <div class="col-md-10">
            <%= form.text_field :state, :class=>"form-control" %>
        </div>
    </div>
    <div class="form-group">
            <%= form.label :zip_code, "Zip Code", :class=>"col-md-2 control-label" %>
        <div class="col-md-10">
            <%= form.text_field :zip_code, :class=>"form-control" %>
        </div>
    </div>
</fieldset>

