<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Company Name</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'About', about_path %></li>
            <li><%= link_to 'Contact', contact_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li>
                <%= link_to "Account", account_path  %>
              </li>
              <li>
                <%= link_to "Logout", logout_path , :data=>{:confirm=>"You sure?"}  %>
              </li>
          </ul>
            <% else %>
              <li>
                <%= link_to "Register", new_account_path %>
              </li>
          </ul>
              <%= form_for  a = AgentSession.new, :html=>{:class=>"navbar-form navbar-right"} do |f|%>
              <%= show_errors(a) %>
                <div class="form-group">
                  <%= f.email_field :email, :placeholder=>"Email", :class=>"form-control input-sm"%>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, :placeholder=>"Password", :class=>"form-control input-sm" %>
                </div>
                <button type="submit" class="btn btn-success btn-sm">Sign in</button>
              </form>
              <% end %>
            <% end %>
        </div><!--/.navbar-collapse -->
      </div>
    </div>
